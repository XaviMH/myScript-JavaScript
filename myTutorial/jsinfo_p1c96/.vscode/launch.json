    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "P1Ch06, run LiveServer on current file (good for exercises)",
            "url": "http://127.0.0.1:5500/${fileBasename}",  // <--- works (LiveServer required)
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "P1Ch06, run LiveServer on 'index.html' (good for theory)",
            "url": "http://127.0.0.1:5500/index.html",  // <--- works (LiveServer required)
            // "file": "${workspaceFolder}/index.html"  // <--- works, but it uses the File descriptor, which
                                                        //      sometimes is not acepted by JScript+LiveServer
        },        
    ]
